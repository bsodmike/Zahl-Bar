<h1>Select Offline-Partner to Make a Payment</h1>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Offline-Partner Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @partners.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.name %></td>
        <td>
          <%= link_to "Make a payment", new_admin_offline_partner_payment_path(r) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

